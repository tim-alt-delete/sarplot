#sysinfo Static {
    padding: 1;
    border: solid green;
    height: auto;
}

#sysinfo {
    border: none;
}

Grid {
    padding: 1;
}

#grid_cpu {
    layout: grid;
    grid-size: 3 2;
    grid-rows: 25% 75%;
}

#plot_cpu {
    column-span: 3;
}

.sysinfo-small {
    layout: vertical;
    overflow: auto; /* Enables scrolling when content exceeds container size */
    height: auto;
}

.sysinfo {
    layout: grid;
    grid-size: 2 2;
    grid-columns: 1fr 1fr;
}
